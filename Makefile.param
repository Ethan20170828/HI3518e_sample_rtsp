ifeq ($(MPP_BUILD), y)
	INC_FLAGS += -I$(SDK_PATH)/mpp/$(EXTDRV)/tw2865
	INC_FLAGS += -I$(SDK_PATH)/mpp/$(EXTDRV)/tlv320aic31
else
	INC_FLAGS += -I$(SDK_PATH)/mpp/extdrv/tw2865
